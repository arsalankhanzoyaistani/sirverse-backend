{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python run_server.py",
    "healthcheckPath": "/ping",
    "numReplicas": 1
  },
  "variables": {
    "RAILWAY_PYTHON_VERSION": "3.11.9",
    "PORT": "5000",
    "FLASK_ENV": "production"
  }
}
